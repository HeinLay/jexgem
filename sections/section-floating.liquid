<div class="floating-blk">
  {%- for block in section.blocks -%}
    {%- if block.settings.image != blank -%}
      <a href="{{ block.settings.link }}" class="floating-btn" style="background: url({{ block.settings.image | img_url: '1000x' }} )no-repeat center;   background-size: cover;">
      </a>
    {%- endif -%}
  {%- endfor -%}
</div>
<script>
  //ページトップへ戻るボタンの処理
$(document).ready(function () { 
  var floating_blk = $('.floating-blk');
  floating_blk.hide();
  $(window).scroll(function() {
    if ($(this).scrollTop() > 700) {
      floating_blk.fadeIn();
    } else {
      floating_blk.fadeOut();
    }      
  });
});
</script>
{% schema %}
{
  "name": "フローティング",
  "max_blocks": 2,
  "blocks": [
    {
      "type": "image",
      "name": "フローティングボタン",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ]
}
{% endschema %}