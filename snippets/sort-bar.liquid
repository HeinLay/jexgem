{%- liquid
  assign filters_valid = false
  if results.filters and show_filters
    assign filters_valid = true
  endif
-%}

<div class="sort-bar">
  <div class="filter-bar__inner{% if filters_valid or show_sort %} show{% endif %}">
    {%- if show_sort -%}
      <div class="filter-bar__group" data-group="{{ heading }}">
        <button type="button" class="filter-bar__button filter-bar__button-dropdown" data-filter-target="__sort" data-sort-dropdown>
          {{ 'filters.sort_title' | t }}

          <span class="filter-bar__icon">
            {% render 'icon' with icon: 'triangle' %}
          </span>
        </button>
      </div>
    {%- endif -%}
  </div>
</div>

